{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist",
    "allowJs": false,
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "module": "ES2015",
    "target": "ES2018",
    "lib": ["ES2018"],
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "declaration": true,
  }
}
